@{
    Layout = null;
}
@model weblog.ViewModels.AccountViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
    .btn
    {
    background:#000000;
    border:1px solid #26800b;
    color:#FFFFFF;
    font-weight:bold;
    font-family:Verdana;
    font-size:14px; 
    width:100px;
    height:50px;
    }
        </style>
</head>
<body bgcolor="#66FFCC">
    @using (Html.BeginForm("Login", "Account"))
    {
        @ViewBag.Error
        <div align="center" margin-right auto;
             margin-left auto>
            <center>
                <table cellpadding="2" cellspacing="2" border="15">
                  
                    <tr>
                        <td><h2>@Html.LabelFor(model=>model.account.Username)</h2></td>
                        <td>@Html.TextBoxFor(model => model.account.Username)</td>
                    </tr>
                    <tr>
                        <td><h2>@Html.LabelFor(model => model.account.Password)</h2></td>
                        <td>@Html.PasswordFor(model => model.account.Password)</td>
                    </tr>


                </table>
                <table>
                    <tr>

                        <td align="center"><input type="submit" class="btn" value="Login" /></td>
                    </tr>
                </table>
            </center>
        </div>
    }
</body>

</html>



